<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical"
	android:layout_height="match_parent" android:layout_width="match_parent">
	<include
		android:id="@+id/header_bar"
		layout="@layout/actionbar_layout_orange"
		android:layout_width="match_parent"
		android:layout_height="@dimen/height_55" />
	<LinearLayout
		android:orientation="horizontal"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:background="#f5f1e9">
		<Spinner
			android:layout_weight="1"
			android:id="@+id/spinner_services"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"></Spinner>
		<Spinner
			android:layout_weight="1"
			android:id="@+id/spinner_areas"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"></Spinner>
	</LinearLayout>
	<ListView
		android:background="#faf8f4"
		android:divider="@null"
		android:id="@+id/list_deals"
		android:layout_width="match_parent"
		android:layout_height="match_parent"></ListView>
</LinearLayout>
